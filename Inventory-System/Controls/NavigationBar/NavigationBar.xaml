<UserControl x:Class="Inventory_System.Controls.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inventory_System.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:NavigationBarViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <Ribbon WindowIconVisibility="Collapsed">
            <Ribbon.Resources>
                <Style TargetType="{x:Type RibbonApplicationMenu}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Style>
            </Ribbon.Resources>
            <RibbonTab Header="Homepage">
                <RibbonGroup VerticalAlignment="Stretch">
                    
                </RibbonGroup>
            </RibbonTab>

            <RibbonTab
               Header="Backend" Margin="0,-5,0,5"/>

        </Ribbon>

    </Grid>
</UserControl>
