<UserControl x:Class="Inventory_System.Controls.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Ribbon WindowIconVisibility="Collapsed">
            <Ribbon.Resources>
                <Style TargetType="{x:Type RibbonApplicationMenu}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Style>
            </Ribbon.Resources>
            <RibbonTab Header="Homepage">
                <RibbonGroup Header="Equipment">
                    <RibbonButton 
                        Label="General" 
                        Grid.Row="0" 
                        Margin="5,5,5,0"
                        Command="{Binding NavigateGeneralCommand}"/>

                    <RibbonButton 
                        Label="SIM-Card" 
                        Grid.Row="1" 
                        Margin="5,5,5,0"
                        Command="{Binding NavigateSIMCommand}"/>

                    <RibbonButton 
                        Label="Tablet" 
                        Grid.Row="2" 
                        Margin="5,5,5,0"/>

                                   <RibbonButton 
                         Style="{StaticResource RibbonButtonMenu}"
                         Label="Tablet" 
                         Grid.Row="2" 
                         Margin="5,5,5,0"/>
                    <RibbonButton 
                         Style="{StaticResource RibbonButtonMenu}"
                         Label="Tablet" 
                         Grid.Row="2" 
                         Margin="5,5,5,0"/>
                </RibbonGroup>
                
                <RibbonGroup Header="Edit menu">
                    <RibbonButton
                        Style="{StaticResource RibbonButtonMenu}"
                        Label="Create"
                        Command=""
                        CommandParameter=""/>
                    <RibbonButton 
                        Style="{StaticResource RibbonButtonMenu}"
                        Label="Edit"
                        Command=""
                        CommandParameter=""/>
                    <RibbonButton 
                        Style="{StaticResource RibbonButtonMenu}"
                        Label="Delete"
                        Command=""
                        CommandParameter=""/>
                </RibbonGroup>
            </RibbonTab>

            <RibbonTab
               Header="Backend" Margin="0,-5,0,5"/>

        </Ribbon>
    </Grid>
</UserControl>
